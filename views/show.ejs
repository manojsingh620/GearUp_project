<% layout("/layouts/boilerplate") -%>

    <div class="row login-page">
        <div class="col-12 offset-0 ">
            <div>
                <div>
                    <h3 class="heading">Car/contact Details :</h3>
                </div>
                <br>

                <div class=" mediaStyle">
                    <div class="card img-car">
                        <img src="<%=listing.image.url%>" class="card-img-top show-image" alt="listing_image">
                        <i>@username - <%= listing.owner.username %></i>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b style="font-size: 1.5rem;">
                                <%=listing.typeName%>
                            </b>
                            <br>
                            &#8377;<%= listing.price%>/km
                                <br>
                                OWN - <%=listing.ownName%>
                                    <br>
                                    State - <%=listing.state%>
                                        <br>
                                        <i class="fa-solid fa-location-dot"></i>
                                        <%=listing.location%>
                                            <br>
                                            Pincode - <%=listing.pincode%>
                                                <br>
                                                Contact Number - <%=listing.phoneNumber%>
                                                    <br>
                                                    Email - <%=listing.email%>
                                                        <br>
                                                        <br>
                                                        <b>About car - </b>
                                                        <%=listing.discription%>
                                                            <br>
                        </p>
                    </div>
                </div>
            </div>

            <br>

            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="show-btns">
                    <div class="edit-btn">
                        <a href="/listings/<%= listing._id %>/edit"><button
                                class="btn btn-dark add-btn mt-3 mb-3">Edit</button></a>
                    </div>
                    <br><br>
                    <div class="delete-btn">
                        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                            <button class="btn btn-dark add-btn mt-3 mb-3">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
            <% if(currUser){ %>
