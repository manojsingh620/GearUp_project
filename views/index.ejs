<% layout("/layouts/boilerplate") -%>

    <body >
        <div class="heading index-show">
            <h3>CHOOSE the car and BOOK NOW</h3>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
            <%for(let listing of allListing){%>
                <a href="/listings/<%=listing._id%>" class="index-anch box-shadow">
                    <div class="card col listing-card index-card mb-3">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem;">

                        <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div>

                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.typeName%>
                                </b>
                                <br>
                                &#8377;<%=listing.price%>/km
                                    <br>
                                    <%=listing.location%>
                                        <br>
                                        Tap for more details
                            </p>
                        </div>
                    </div>

                </a>
                <%}%>
        </div>
    </body>